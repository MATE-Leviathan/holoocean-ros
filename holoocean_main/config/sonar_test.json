{
    "name": "ImagingSonarTest",
    "package_name": "Ocean",
    "world": "PierHarbor",
    "main_agent": "auv0",
    "ticks_per_sec": 30,
    "frames_per_sec": 30,
    "agents": [
        {
        "agent_name": "auv0",
        "agent_type": "HoveringAUV",
        "sensors": [
            {
                "sensor_type": "DynamicsSensor",
                "configuration": {
                    "UseCOM": true,
                    "UseRPY": false 
                },
                "ros_publish": true

            },
            {
                "sensor_type": "DVLSensor",
                "ros_publish": true,
                "configuration":{
                    "VelSigma": [0.1,0.1,0.1,0.1]
                }
            },
            {
                "sensor_type": "IMUSensor",
                "ros_publish": true,
                "socket": "COM",
                "configuration":{
                    "AccelSigma": [0.01,0.01,0.01],
                    "AngVelSigma": [0.01,0.01,0.01],
                    "ReturnBias": true
                }
            },
            {
                "sensor_type": "GPSSensor",
                "ros_publish": true,
                "tick_every": 30,
                "configuration":{
                    "Sigma": [0.001,0.001,0.001],
                    "Depth": 0.5,
                    "DepthSigma": 0.05
                }
            },
            {
                "sensor_type": "RotationSensor",
                "ros_publish": true
            },
            {
                "sensor_type": "DepthSensor",
                "ros_publish": true,
                "configuration":{
                    "Sigma": 0.03
                }
            },
	    {
                "sensor_type": "ImagingSonar",
                "ros_publish": true,
                "socket": "SonarSocket",
                "Hz": 30,
                "configuration": {
                    "RangeBins": 512,
                    "AzimuthBins": 512,
                    "RangeMin": 1,
                    "RangeMax": 40,
                    "InitOctreeRange": 50,
                    "Elevation": 20,
                    "Azimuth": 120
                }
            },
	    {
		    "sensor_type": "RGBCamera",
               	"ros_publish": true,
		    "sensor_name": "RightCamera",
		    "socket": "CameraRightSocket",
		    "Hz": 30,
		    "configuration": {
			    "CaptureWidth": 512,
			    "CaptureHeight": 512
		    }
	    }
        ],
	"control_scheme": 0,
        "location": [486.0, -632.0, -12.0],
        "rotation": [0.0, 0.0, 180.0]
        }
    ]
}
